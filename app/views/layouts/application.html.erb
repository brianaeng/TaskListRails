<!DOCTYPE html>
<html>
<head>
  <title>Task List</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <header>
    <nav>
      <div class="site-nav">
        <%= link_to_unless_current("Home", root_path) %>
        <%= link_to_unless_current("Add New Task", new_path) %>
      </div>

      <div class="user-nav">
        <% if session[:user_id] == nil %>
          <%= link_to "Log in via Github", "/auth/github"  %>
        <% else %>
          <%= link_to "Profile", user_path(session[:user_id]), method: :get %>
          <%= link_to "Log out", "/session/destroy", method: :delete %>
        <% end %>
      </div>
    </nav>
  </header>

<%= yield %>

</body>
</html>
