<%= form_for @task, url: action_name do |f| %>
  <%= f.hidden_field :user_id, value: session[:user_id] %>

  <%= f.label :title %>
  <%= f.text_field :title%>

  <%= f.label :description %>
  <%= f.text_area :description %>

  <% if @task.id != nil %>
    <%= f.label :completed_at %>
    <%= f.datetime_local_field :completed_at %>
  <% end %>

  <%= f.submit %>
<% end %>
