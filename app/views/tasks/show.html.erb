<h1><%= @task[:title] %></h1>
<article>
  <h4>Description: </h4>
  <p>
    <%= @task[:description] %>
  </p>
  <h4>Status: </h4>
  <p>
    <% if @task[:completion] == true %>
      Done @ <%= @task[:completed_at] %>
    <% else %>
      Still in progress
    <% end %>
  </p>
</article>
<div>
  <h5><%= link_to("Edit", edit_path(@task[:id])) %></h5>
  <h5><%= link_to("Delete", destroy_path(@task[:id])) %></h5>
</div>
